<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_selected="true">
    <layer-list>
      <item>
        <shape>
          <corners android:radius="24dp"/>
          <padding android:top="-4dp"
              android:left="-4dp"
              android:bottom="-4dp"
              android:right="-4dp"/>
          <solid android:color="#FFFFFF"/>
        </shape>
      </item>
      <item android:drawable="@drawable/ic_campicker_check_circle"/>

    </layer-list>
  </item>

  <item>
    <layer-list>
      <item>
        <shape>
          <corners android:radius="24dp"/>
          <padding
              android:top="-4dp"
              android:left="-4dp"
              android:bottom="-4dp"
              android:right="-4dp"/>
        </shape>
      </item>
      <item android:drawable="@drawable/ic_campicker_uncheck_circle"/>
    </layer-list>
  </item>

</selector>